<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

 <?import View.PipeDisplayer?>

<BorderPane fx:id="borderPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainWindowController">
   <left>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Start" />
            <Button mnemonicParsing="false" text="Stop" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Server IP:">
               <HBox.margin>
                  <Insets bottom="10.0" left="16.0" right="4.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="serverIPTextField" promptText="The IP of the server" text="127.0.0.1" >
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </TextField>
            <Label layoutX="20.0" layoutY="20.0" text="Port:">
               <HBox.margin>
                  <Insets bottom="10.0" left="16.0" right="4.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="serverPortNumberTextField" promptText="Port number" text="6400" >
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#solveLevel" text="Solve">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <top>
      <MenuButton mnemonicParsing="false" text="Menu" BorderPane.alignment="CENTER_LEFT">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#OnSettings" text="Settings" />
          <MenuItem mnemonicParsing="false" onAction="#OnTimeSteps" text="Time &amp; Steps" />
            <MenuItem mnemonicParsing="false" onAction="#OnMessage" text="Message" />
            <MenuItem mnemonicParsing="false" onAction="#OnTheme" text="Theme" />
        </items>
      </MenuButton>
   </top>
   <center>
      <Pane fx:id="parentOfCanvas" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>

    		<PipeDisplayer fx:id="pipeDisplayer" height="400.0" width="350.0" leftToRightPipe="./resources/-.png" leftToUpPipe="./resources/j.png" BorderPane.alignment="CENTER"/>
     	
      		<!-- <Canvas height="400.0" width="349.0" />  -->
      		
         </children>
      </Pane>
   </center>
</BorderPane>
