 <?import View.MazeDisplayer?>


<BorderPane fx:id="borderPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainWindowController">
   <left>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#solveLevel" text="Start" />
            <Button mnemonicParsing="false" text="Stop" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Status">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </bottom>
   <center>
<MazeDisplayer fx:id="mazeDisplayer" height="400.0" width="400.0" BorderPane.alignment="CENTER">

<!-- <Canvas height="400.0" width="349.0" BorderPane.alignment="CENTER"> 
 -->
          <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
 </MazeDisplayer>

<!--  </Canvas> 
 -->   </center>
   <top>
      <MenuButton mnemonicParsing="false" text="Menu" BorderPane.alignment="CENTER_LEFT">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#newPage" text="Settings" />
          <MenuItem mnemonicParsing="false" onAction="#newPage" text="Time" />
            <MenuItem mnemonicParsing="false" onAction="#newPage" text="Message" />
            <MenuItem mnemonicParsing="false" onAction="#newPage" text="Theme" />
            <MenuItem mnemonicParsing="false" onAction="#newPage" text="Top 10" />
        </items>
      </MenuButton>
   </top>
</BorderPane>
